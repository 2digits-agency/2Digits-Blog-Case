{
  "name": "2digits-blog-case",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:web": "next dev --turbo",
    "dev": "turbo dev:web",
    "build:web": "next build",
    "build": "turbo build:web",
    "start": "next start",
    "types": "tsc --noEmit",
    "fix": "pnpm '/(lint|format):fix$/'",
    "format": "prettier \"**/*\" --ignore-unknown --check --cache",
    "format:fix": "prettier \"**/*\" --ignore-unknown --write --cache",
    "lint": "eslint . --ignore-path .gitignore --cache --max-warnings 0",
    "lint:fix": "eslint . --ignore-path .gitignore --fix --cache",
    "check": "turbo format lint types",
    "codegen": "graphql-codegen"
  },
  "dependencies": {
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "next": "^14.1.0",
    "ofetch": "^1.3.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "server-only": "^0.0.1",
    "tailwind-variants": "^0.2.0"
  },
  "devDependencies": {
    "@2digits/eslint-config": "^1.3.0",
    "@2digits/prettier-config": "^2.0.0",
    "@2digits/tsconfig": "^0.3.4",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/import-types-preset": "^3.0.0",
    "@graphql-codegen/typescript": "^4.0.4",
    "@graphql-codegen/typescript-generic-sdk": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.1.2",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.57",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.3",
  "eslintConfig": {
    "extends": "@2digits",
    "ignorePatterns": [
      "src/server/*/generated/**"
    ]
  },
  "prettier": "@2digits/prettier-config"
}
